# Application
NODE_ENV=development
PORT=3000
APP_NAME="NestJS Auth Boilerplate"

# Database (PostgreSQL)
DATABASE_URL="postgresql://bullnbear_user:bullnbear_password@localhost:5432/boilerplate"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-access-token-key-min-32-chars-here-change-me"
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_SECRET="your-super-secret-jwt-refresh-token-key-min-32-chars-here-change-me"
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Email (Resend)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Email Verification
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_TOKEN_EXPIRATION=24h

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRATION=1h

# CORS
CORS_ORIGIN=http://localhost:3000
